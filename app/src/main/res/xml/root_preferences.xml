<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:defaultValue="Deixe seu recado aqui!"
            app:key="signature"
            app:negativeButtonText="Cancelar"
            app:title="Recado"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Sim"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="availability"
            app:negativeButtonText="Cancelar"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/account_header">
        <Preference
            app:key="@string/exitText"
            app:summary="Fazer logout"
            app:title="Sair" />
    </PreferenceCategory>

</PreferenceScreen>